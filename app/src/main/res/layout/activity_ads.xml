<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".AdsActivity"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F00FCF17"
        app:theme="@style/Theme.AdminFakha"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="اضافه اعلان" />
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/img_picker"
        android:background="#000"
        android:src="@drawable/product_image"
        android:layout_margin="15dp"
        android:layout_below="@+id/toolbar"
        android:scaleType="fitXY"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="PICK IMAGE for ADS"
        android:textColor="#fff"
        android:textStyle="bold"
        android:id="@+id/but_upload"
        android:background="@drawable/background_button"
        android:layout_below="@+id/img_picker"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>