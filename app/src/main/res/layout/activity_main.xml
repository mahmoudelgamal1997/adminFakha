<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#fff">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F00FCF17"
        app:theme="@style/Theme.AdminFakha"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Shadr" />
    </androidx.appcompat.widget.Toolbar>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="add Ads"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_button"
        android:layout_marginTop="60dp"
        android:id="@+id/but_ads"
         />
    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="add new Product"
        android:background="@drawable/background_button"
        android:layout_below="@+id/but_ads"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/but_product"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="add new  offer"
        android:background="@drawable/background_button"
        android:layout_below="@+id/but_product"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/but_offer"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Change offer state"
        android:background="@drawable/background_button"
        android:layout_below="@+id/but_offer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/but_change_offer"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Delete Product"
        android:background="@drawable/background_button"
        android:layout_below="@+id/but_change_offer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/but_change_product"
        />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Area "
            android:background="@drawable/background_button"
            android:layout_below="@+id/but_change_product"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/but_add_area"
            />

    </RelativeLayout>
</ScrollView>
</RelativeLayout>